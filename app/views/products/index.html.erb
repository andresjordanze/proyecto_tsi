<% title "Stock de productos" %>
<h1>Stock de Productos</h1>
<%= link_to_function "Buscar", "$('#hide').toggle()", :class => "btn btn-info" %><br>
<div id="hide" style="display:none">
<br>
<form method="GET" action="/products/search">
Nombre: <input type="text" name="name"> &nbsp;&nbsp;&nbsp;
<input type="submit" value="Buscar">
</form>
</div>

<CENTER>

<table class="table table-striped">
    <thead>
        <tr>
            <th><Center>Nombre</Center></th>
            <th><Center>Marca</Center></th>
            <th><Center>Categoria</Center></th>
            <th><Center>Cantidad</Center></th>      
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><CENTER><%= product.name %></CENTER></td>
                <td><CENTER><%= product.brand %></CENTER></td>
                <td><CENTER><%= product.category %></CENTER></td>
                <td><CENTER><%= product.quantity %></CENTER></td>
                <td><%= link_to 'Ver', product, :class => 'btn btn-mini'  %></td>
                <% if current_user.rol == "enc_almacen" %>
                <td><%= link_to 'Editar', edit_product_path(product), :class => 'btn btn-mini'  %></td>
                <td><%= link_to 'Eliminar', product_path(product), method: :delete, data: { confirm: 'Seguro?' }, :class => 'btn btn-mini btn-danger' %></td>
                <%end%>    
                <%if product.home == true%>
                    <td><%= button_to 'Eliminar de pagina', :controller => :products, :action => 'delete_from_home', :id => product.id %></td>
                    <%else%>
                    <% if current_user.rol == "admin" %>
                <td><%= button_to 'AÃ±adir a pagina', :controller => :products, :action => 'add_to_home', :id => product.id%></td>
                <%end%>    
                <%end%>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
</Center>
