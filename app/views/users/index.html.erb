<% title "Usuarios" %>
<h1>Lista de Usuarios</h1>

<table class="table table-bordered">
  <tr>
    <th>Nombre Completo</th>
    <th>Nombre de Usuario</th>
    <th>Rol</th>
    <th>Fecha Creacion</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="info">
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.rol %></td>
    <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
    <% if current_user.username != user.username %>
    <td><%= button_to 'Eliminar Usuario', user_path(user),method: :delete, data: { confirm: 'Seguro?' }, :class => "btn btn-lg btn-danger" %></td>
    <% else %>
    <td></td>
    <% end %>
  </tr>
<% end %>
</table>
</br>
<%= link_to 'Crear Usuario', :controller => :users, :action => 'new' %>