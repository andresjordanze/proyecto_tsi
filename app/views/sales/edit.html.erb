<% title "Confirmar Venta" %>
<% javascript 'dynamic_clients' %>
<HTML>
<BODY>

<div class="hero-unit">
<CENTER>
<h1>Registrar Datos Venta</h1>
<br>
<%= form_validated_for (@sale) do |f| %>
	<div class="col-xs-3">
		<p>
			<%= f.label :nit , "NIT Cliente:" %>
			<%= f.collection_select(:nit, Client.all, :nit, :nit, :prompt => "Seleccione un NIT")%>
		</p>

		<p>
			<%= f.label :check_number , "Numero de Factura:" %>
			<%= f.text_field :check_number, :value => "", :maxlength => '12'%>
		</p>	

		<p>
			<%= f.submit "Confirmar Venta", class: "btn btn-large btn-jordi" %>
		</p>
	</div>	
<%end%>
</CENTER>
</div>
</BODY>
</HTML>
