<h1>Listing kardexes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Detail</th>
      <th>Income</th>
      <th>Output</th>
      <th>Residue</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kardexes.each do |kardex| %>
      <tr>
        <td><%= kardex.date %></td>
        <td><%= kardex.detail %></td>
        <td><%= kardex.income %></td>
        <td><%= kardex.output %></td>
        <td><%= kardex.residue %></td>
      </tr>
    <% end %>
  </tbody>
</table>

