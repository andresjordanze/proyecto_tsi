<% title "Editar Producto" %>
<h1>Editar Producto</h1>

<div class="row">
	
	<%= form_validated_for(@product) do |f| %>
  			
  		<div class="field">
			<p><%= f.label :name , "*Nombre:" %>
			<%=f.collection_select(:name, Productname.all, :name, :name)%>
		</div>
	
			<p><%= f.label :detail , "*Detalle:" %>
			<%= f.text_area :detail, :maxlength => '100'%>

			<p><%= f.label :general_code , "*Codigo General del Producto:" %>
			<%= f.text_field :general_code, :maxlength => '15' %>

			<p><%=f.label :category, "*Categoria" %>
    		<%=f.collection_select(:category, Category.all, :name, :name)%>

    		<p><%=f.label :brand, "*Marca" %>
    		<%=f.collection_select(:brand, Brand.all, :name, :name)%>

			<p><%= f.submit "Guardar Cambios", class: "btn btn-large btn-jordi" %></p>
		<%end%>
	
</div>

<div align="left">
  <%= button_to 'Volver', products_path, :method => :get, :class => 'btn btn-default  ' %><br> 
</div>