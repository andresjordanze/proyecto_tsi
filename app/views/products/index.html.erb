<% title "Stock de productos" %>
<h1>Stock de Productos</h1>

<center>
<div>
<br>
<form method="GET" action="/products/search">
Busqueda: <input type="text" name="name" placeholder="Nombre de producto"> &nbsp;&nbsp;&nbsp;
<input type="submit" value="Buscar producto en Stock" class="btn btn-mini btn-info   ">
</form>
</div>
</center>

<CENTER>

<table class="table table-striped">
    <thead>
        <tr>
            <th><Center>Nombre</Center></th>
            <th><Center>Marca</Center></th>
            <th><Center>Categoria</Center></th>
            <th><Center>Cantidad</Center></th>      
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><CENTER><%= product.name %></CENTER></td>
                <td><CENTER><%= product.brand %></CENTER></td>
                <td><CENTER><%= product.category %></CENTER></td>
                <td><CENTER><%= product.quantity %></CENTER></td>
                <td><div align="right">
                      <button class="btn btn-success" data-toggle="modal" data-target="#myModal" >Ver producto</button>
                    </div>
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3 class="modal-title" id="myModalLabel" align="center"><%= product.name %></h3>
                          </div>
                          <div class="modal-body">
                            <b>Codigo del producto:</b> <%= product.general_code %><br>
                            <b>Marca:</b> <%= product.brand %><br>
                            <b>Categoria:</b> <%= product.category %><br>
                            <b>Detalle:</b> <%= product.detail %><br>
                            <b>Cantidad:</b> <%= product.quantity %>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Volver</button>
                          </div>
                        </div>
                      </div>
                    </div></td><td>

                <% if current_user.rol == "enc_almacen" || current_user.rol == "gerente" %>
                    <%= link_to 'Editar Producto', {:controller => :products, :action => "edit", :id => product.id }, :class => 'btn btn-mini btn-warning'  %>
                    <%if product.quantity == 0%>
                        <%= link_to 'Eliminar Producto', product_path(product), method: :delete, data: { confirm: 'Seguro?' }, :class => 'btn btn-mini btn-danger' %>
                    <%end%>
                     <%= link_to 'Ver Kardex', {:controller => :kardexes, :action => "index", :id => product.id , :name => product.name}, :class => 'btn btn-mini btn-default'  %>
                    <%if product.quantity <= 5 %>
                     <span class="btn btn-mini btn-danger">Minimo de productos!</span>
                    <%end%>
                    </td>    
                <%end%>
                <% if current_user.rol == "admin" || current_user.rol == "gerente"%>
                    <%if product.home == true%>
                    <td><%= button_to 'Eliminar de pagina', {:controller => :products, :action => 'delete_from_home', :id => product.id}, :class => 'btn btn-mini btn-danger' %></td>
                    <%else%>
                    <td><%= button_to 'AÃ±adir a pagina', {:controller => :products, :action => 'add_to_home', :id => product.id}, :class => 'btn btn-jordi'%></td>
                    <%end%>    
                <%end%>
            </tr>
        <% end %>
    </tbody>
</table>
<%= will_paginate @products, :previous_label => 'Anterior', :next_label => 'Siguiente' %>
<br>
</Center>
