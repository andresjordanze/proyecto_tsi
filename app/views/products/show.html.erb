<% title @product.name %>
<CENTER><H1><%= @product.name %> </H1>

<p>
    <small>Detalle:</small><br>
    <%= @product.detail %>
</p>

<p>    
    <small>Cantidad</small><br>
    <%= @product.quantity %>
</p>

<p>
    <small>Codigo del producto: </small><br>
    <%= @product.general_code %>
</p>

<p>
    <small>Marca: </small><br>
    <%= @product.brand %>
</p>

<p>
    <small>Categoria: </small><br>
    <%= @product.category %>
</p>

<p>
    <small>Precio de Compra:</small><br>
    <%= @product.bought_price %>
</p>

<p>
    <small>Precio de venta: </small><br>
    <%= @product.sale_price %>
</p>    
<%= button_to 'Editar', edit_product_path(@product), :class => 'btn btn-default', :method => :get %><br>
<%= button_to 'Volver', products_path, :method => :get, :class => 'btn btn-default' %><br>

  </CENTER>